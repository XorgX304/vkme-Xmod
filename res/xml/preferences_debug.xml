<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen android:key="preferences_debug"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="Домены" android:key="domains">
        <Preference android:title="Домен API" android:key="apiHost" android:defaultValue="api.vk.com" />
        <EditTextPreference android:title="Домен OAuth" android:key="oauthHost" android:defaultValue="oauth.vk.com" />
        <EditTextPreference android:title="VK UI host uri" android:key="vkUiHostUri" android:defaultValue="static.vk.com" />
        <EditTextPreference android:title="VK UI SPA uri" android:key="spaUri" android:defaultValue="vk.com/spa" />
        <EditTextPreference android:title="away.php domain" android:key="awayPhpDomain" android:defaultValue="m.vk.com" />
    </PreferenceCategory>
    <PreferenceCategory android:title="Логирование" android:key="logging">
        <CheckBoxPreference android:title="Логирование API" android:key="__dbg_api" android:defaultValue="false" />
        <CheckBoxPreference android:title="Моментальная отправка статы" android:key="__dbg_force_send" android:defaultValue="false" />
        <CheckBoxPreference android:title="Дебаг WebView" android:key="__dbg_webview" android:defaultValue="false" />
        <CheckBoxPreference android:title="Визуализация view_post_time" android:key="__dbg_view_post_time_overlay" android:summary="Подсвечивать посты при регистрации события view_post_time" android:defaultValue="false" />
        <CheckBoxPreference android:title="Разрешить брекпоинты" android:key="__dbg_allow_requests_breakpoints" android:summary="Разрешить брекпоинты запросов через Proxy (Charles)" android:defaultValue="false" />
        <CheckBoxPreference android:title="Применять дырки" android:key="__dbg_apply_spaces" android:summary="Применять дырки для сообщений после long poll history." android:defaultValue="false" />
        <CheckBoxPreference android:title="Включить MemLeak detect" android:key="__dbg_mem_leak" android:defaultValue="false" />
        <Preference android:title="Запись логов в файл" android:key="__dbg_log_to_file" android:summary="До полного перезапуска приложения" />
    </PreferenceCategory>
    <PreferenceCategory android:title="Кэш" android:key="cache">
        <Preference android:title="Очистить хэш 2ФА" android:key="clearTrustedHash" />
        <Preference android:title="Очистить кэш WebView" android:key="clearWebViewCache" />
        <Preference android:title="Очистить видео кэш" android:key="clearVideoCache" />
    </PreferenceCategory>
    <PreferenceCategory android:title="Системные" android:key="system">
        <EditTextPreference android:title="Language override" android:key="__dbg_lang_override" />
        <Preference android:title="Завершить процесс" android:key="__dbg_terminate" />
        <Preference android:title="Обновить регистрацию Firebase" android:key="__dbg_re_register_firebase" />
        <Preference android:title="Скопировать push token" android:key="__dbg_copy_firebase_token" />
        <Preference android:title="Обновить Google Now" android:key="reRegisterGoogleNow" />
    </PreferenceCategory>
    <PreferenceCategory android:title="Тесты" android:key="tests">
        <Preference android:title="Тест уведомления о ДР" android:key="__dbg_test_bday" />
        <Preference android:title="Тест ошибки need_validation" android:key="__dbg_test_validation" />
        <Preference android:title="Тест ошибки captcha" android:key="__dbg_test_captcha" />
        <Preference android:title="Тест ошибки системы" android:key="__dbg_test_crash" />
        <EditTextPreference android:title="VK UI Uri (для теста)" android:key="testSPAUri" android:defaultValue="static.vk.com/demo" />
        <Preference android:title="Тест VK UI" android:key="__dbg_test_vk_ui" />
    </PreferenceCategory>
    <PreferenceCategory android:title="Другие" android:key="others">
        <CheckBoxPreference android:title="Отключить рекламу" android:key="__dbg_no_ads" android:defaultValue="false" />
        <CheckBoxPreference android:title="Отключить карусель рекламы" android:key="__dbg_no_slider_ads" android:defaultValue="false" />
        <CheckBoxPreference android:title="Тестовая реклама" android:key="__dbg_demo_ads" android:defaultValue="false" />
        <CheckBoxPreference android:title="Демо карусель карточек" android:key="__dbg_demo_pretty_cards" android:defaultValue="false" />
        <CheckBoxPreference android:title="Прокси" android:key="__dbg_proxy_enable" android:defaultValue="false" />
        <CheckBoxPreference android:title="Отключить видео дискавер" android:key="__dbg_disable_video_feed" android:defaultValue="false" />
    </PreferenceCategory>
</PreferenceScreen>